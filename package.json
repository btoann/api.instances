{
  "name": "javascript",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "prettying": "lint-staged",
    "build:sass": "node-sass src/resources/scss/ --output public/css/ --no-source-map",
    "build:ts": "tsc",
    "watch:sass": "yarn run build:sass && node-sass -wr src/resources/scss/ -o public/css/",
    "watch:ts": "tsc --watch",
    "serve": "nodemon dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Scss\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm-run-all --parallel watch:*\" \"npm run serve\"",
    "build": "npm-run-all --parallel build:*",
    "dev": "yarn run build && yarn run watch",
    "debug": "yarn run build && yarn run debug:watch",
    "debug:serve": "nodemon --inspect dist/main.js",
    "debug:watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run debug:serve\"",
    "start": "tsc --watch && npm-run-all --parallel serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "json-serve": "^0.1.0",
    "json-server": "^0.17.3",
    "mongoose": "^7.0.4",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-handlebars": "^6.0.0",
    "@types/json-server": "^0.14.4",
    "@types/morgan": "^1.9.4",
    "husky": "4.3.8",
    "lint-staged": "^13.2.1",
    "morgan": "^1.10.0",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "src/**/*.{js,json,scss}": "prettier --single-quote --trailing-comma all --tab-width 2 --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/btoann/api.instances.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/btoann/api.instances/issues"
  },
  "homepage": "https://github.com/btoann/api.instances#readme",
  "description": ""
}
