{{!-- Modal Delete --}}
<dialog id="delete-dialog" class="appDialog">
  <form class="appDialog__form" method="POST">
    <div class="appDialog__header">Confirmation</div>
    <div class="appDialog__body">
      You really want to perform this action?
    </div>
    <div class="appDialog__footer">
      <input type="hidden" name="ids[]" value="">
      <button type="submit" class="btn btn-danger">Yes, delete it!</button>
      <button type="submit" class="btn btn-secondary" formmethod="dialog">Cancel</button>
    </div>
  </form>
</dialog>
{{!-- End of Modal Delete --}}

